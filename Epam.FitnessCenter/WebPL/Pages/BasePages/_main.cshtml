@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title></title>
    <link href="~/Style/Style.css" rel="stylesheet" />
    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css" integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh" crossorigin="anonymous">
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-light bg-light">
        <a class="navbar-brand" href="#">Главная</a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavAltMarkup" aria-controls="navbarNavAltMarkup" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
            <div class="navbar-nav">
                <a class="nav-item nav-link active" href="~/Pages/Index.cshtml">Home <span class="sr-only">(current)</span></a>
                <a class="nav-item nav-link" href="~/Pages/TimeTable.cshtml">TimeTable</a>
                <a class="nav-item nav-link" href="~/Pages/Users.cshtml">Users</a>
                <a class="nav-item nav-link " href="~/Pages/Hall.cshtml">Hall</a>

                @if (!User.Identity.IsAuthenticated)
                {
                    <a class="nav-item nav-link " href="~/Pages/SingIn.cshtml">SingIn</a>
                    <a class="nav-item nav-link " href="~/Pages/SingUp.cshtml">SingUp</a>
                }
                @if (User.Identity.IsAuthenticated)
                {
                    <a class="nav-item nav-link " href="~/Pages/SingIn.cshtml">Sing Out</a>
                }
            </div>
        </div>
    </nav>
    @RenderSection(Page.Section)


    <div class="fixed-overlay" id="fixed-overlay">
        <div class="my__modal">
            <div class="modal-dialog" role="document">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title" id="exampleModalLabel">Modal title</h5>      
                    </div>
                    <div class="modal-body">
                        
                    </div>
                    <div class="modal-footer">
                        <form action="/" method="post" id="DeleteAll">
                            <button type="button" id="b__close__edit" class="btn btn-secondary b__close__edit" data-dismiss="modal">Close</button>
                            <button type="submit" class="btn btn-primary b__edit">Save</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script type="text/javascript" src="~/Scripts/ActionDelete.js"></script>
</body>

</html>