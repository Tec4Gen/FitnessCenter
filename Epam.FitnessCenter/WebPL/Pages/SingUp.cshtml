@{
    Layout = "~/Pages/BasePages/_main.cshtml";
    Page.Section = "SingUp";
}

<!DOCTYPE html>

@section SingUp{
    <div class="containerFormSingIn">
        <form class="SingIn" action="~/Pages/Redirect/AddUser.cshtml" method="post">

            <div class="form-group col-md-3">
                <label for="LastName">LastName</label>
                <input name="lastName" class="form-control" type="text" value="">
            </div>
            <div class="form-group col-md-3">
                <label for="FirstName">FirstName</label>
                <input name="firstName" class="form-control" type="text" value="">
            </div>
            <div class="form-group col-md-4">
                <label for="MiddleName">MiddleName</label>
                <input name="middleName" class="form-control" type="text" value="">
            </div>

            <div class="form-group col-md-3">
                <label for="Login">Login</label>
                <input name="login" class="form-control" type="text" value="">
            </div>

            <div class="form-group col-md-3">
                <label for="Password">Password</label>
                <input name="password" class="form-control" type="password" value="">
            </div>

            <button type="submit" class="btn btn-primary">Submit</button>
        </form>
    </div>
}
